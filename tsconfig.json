
{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2019",
        "watch": false,
        "lib": [ "es2020", "dom" ],
        "types": [ "node", "jest" ],
        "outDir": "dist",
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/tests/**/*"
    ]
}